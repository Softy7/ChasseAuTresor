<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Belge"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/SettingBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="310dp"
        android:background="@color/BelgeF">


        <ImageButton
            android:id="@+id/btn_account"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/compte_param"
            android:layout_marginTop="90dp"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_help"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/audio_param"
            android:layout_marginTop="200dp"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/btn_question"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/help_param"
            android:layout_marginTop="310dp"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/btn_reseaux"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/website"
            android:layout_marginTop="420dp"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/btn_thanks"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/clapper_board"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compte"
        android:layout_marginStart="100dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="35sp"
        />

</androidx.drawerlayout.widget.DrawerLayout>