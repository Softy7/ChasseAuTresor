<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
android:id="@+id/layout_game">

    <com.example.Chasse.View.MapWithPointsView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:src="@drawable/map"


            android:layout_alignParentBottom="true" android:layout_marginBottom="2dp"/>
    <Button
            android:text="Mode dÃ©veloppeur"
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/button_dev_mode"/>
    <TextView
            android:text="Position X"
            android:layout_width="wrap_content"
            android:layout_height="22dp" android:id="@+id/posX" android:layout_marginBottom="-42dp"
            android:layout_alignBottom="@+id/button_dev_mode" android:layout_marginTop="20dp"
            android:layout_below="@+id/button_dev_mode" android:layout_alignParentEnd="true" android:layout_marginEnd="313dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    <TextView
            android:text="Position Y"
            android:layout_width="wrap_content"
            android:layout_height="22dp" android:id="@+id/posY" android:layout_marginBottom="-40dp"
            android:layout_alignBottom="@+id/button_dev_mode" android:layout_marginTop="19dp"
            android:layout_below="@+id/button_dev_mode" android:layout_alignParentEnd="true" android:layout_marginEnd="117dp"
            android:layout_alignParentStart="true" android:layout_marginStart="195dp"/>
    <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_input_x" android:layout_marginTop="65dp" android:layout_below="@+id/posX"/>
    <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_input_y" android:layout_marginTop="50dp" android:layout_below="@+id/posX"
            android:layout_marginEnd="-80dp" android:layout_alignEnd="@+id/posY"/>

    <Button
        android:id="@+id/openChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        android:layout_gravity="center"
        android:layout_marginStart="300dp"/>

</RelativeLayout>